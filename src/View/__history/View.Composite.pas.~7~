unit View.Composite;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, View.Default, Vcl.StdCtrls,
  Structural.Composite.Empregado,
  Structural.Composite.Programador,
  Structural.Composite.Gerente, Vcl.ExtCtrls;

type
  TfrmComposite = class(TfrmDefault)
    memLog: TMemo;
    Panel1: TPanel;
    btnMontarEstrutura: TButton;
    procedure FormCreate(Sender: TObject);
    procedure FormDestroy(Sender: TObject);
  private
    { Private declarations }
    FRaiz: TEmpregado;
    procedure MontarEstruturaPadrao;
    procedure AtualizarLog;
  public
    { Public declarations }
  end;

var
  frmComposite: TfrmComposite;

implementation

{$R *.dfm}

{ TfrmComposite }

procedure TfrmComposite.AtualizarLog;
begin

end;

procedure TfrmComposite.FormCreate(Sender: TObject);
begin
  inherited;
  FRaiz := nil;
  memLog.Clear;
  memLog.ScrollBars := ssVertical;

  MontarEstruturaPadrao; // já mostra algo ao abrir
end;

procedure TfrmComposite.FormDestroy(Sender: TObject);
begin
  FreeAndNil(FRaiz);
  inherited;
end;

procedure TfrmComposite.MontarEstruturaPadrao;
var
  pEstagiario, pJunior, pSenior: TEmpregado;
  g1, g2, g3: TGerente;
begin
  FreeAndNil(FRaiz);

  // folhas
  pEstagiario := TProgramador.Create('José',    900);
  pJunior     := TProgramador.Create('Pedro',  2900);
  pSenior     := TProgramador.Create('Ricardo', 3900);

  // composites
  g1 := TGerente.Create('Carlos',  5000);
  g2 := TGerente.Create('Maria',  10000);
  g3 := TGerente.Create('João',   15000); // raiz

  // Carlos supervisiona José e Pedro
  g1.Add(pEstagiario);
  g1.Add(pJunior);

  // Maria supervisiona Ricardo
  g2.Add(pSenior);

  // João supervisiona Carlos e Maria
  g3.Add(g1);
  g3.Add(g2);

  FRaiz := g3;

  AtualizarLog;
end;

end.
