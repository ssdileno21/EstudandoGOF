unit View.Facade;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, View.Default, Vcl.StdCtrls, Vcl.ExtCtrls,
  Structural.Facade.Facade;

type
  TfrmFacade = class(TfrmDefault)
    Panel1: TPanel;
    Panel2: TPanel;
    memLog: TMemo;
    btnMetodoA: TButton;
    btnMetodoB: TButton;
    btnLimpar: TButton;
    procedure FormCreate(Sender: TObject);
    procedure FormDestroy(Sender: TObject);
    procedure btnMetodoAClick(Sender: TObject);
    procedure btnMetodoBClick(Sender: TObject);
    procedure btnLimparClick(Sender: TObject);
  private
    { Private declarations }
    FFacade: TFacade;
    procedure ExecutarFacade(const AMetodo: Char);
  public
    { Public declarations }
  end;

var
  frmFacade: TfrmFacade;

implementation

{$R *.dfm}

procedure TfrmFacade.btnLimparClick(Sender: TObject);
begin
  inherited;
  memLog.Clear;
end;

procedure TfrmFacade.btnMetodoAClick(Sender: TObject);
begin
  inherited;
  ExecutarFacade('A');
end;

procedure TfrmFacade.btnMetodoBClick(Sender: TObject);
begin
  inherited;
  ExecutarFacade('B');
end;

procedure TfrmFacade.ExecutarFacade(const AMetodo: Char);
begin
  memLog.Clear;

  case AMetodo of
    'A':
      begin
        memLog.Lines.Add('Operação A via Facade (ordem: 1 -> 2 -> 3):');
        memLog.Lines.Add('');
        memLog.Lines.Add('Se NÃO existisse a Facade, o cliente precisaria fazer:');
        memLog.Lines.Add('');
        memLog.Lines.Add('  s1 := TSubsistemaUm.Create;');
        memLog.Lines.Add('  s1.MetodoUm;');
        memLog.Lines.Add('  s2 := TSubsistemaDois.Create;');
        memLog.Lines.Add('  s2.MetodoDois;');
        memLog.Lines.Add('  s3 := TSubsistemaTres.Create;');
        memLog.Lines.Add('  s3.MetodoTres;');
        memLog.Lines.Add('');
        memLog.Lines.Add('Com Facade, o cliente faz apenas:');
        memLog.Lines.Add('');
        memLog.Lines.Add('  facade.MetodoA;');
        memLog.Lines.Add('');
        memLog.Lines.Add('Saída gerada internamente pelos subsistemas:');
        memLog.Lines.Add('');

        FFacade.MetodoA(memLog.Lines);
      end;

    'B':
      begin
        memLog.Lines.Add('Operação B via Facade (ordem: 3 -> 2 -> 1):');
        memLog.Lines.Add('');
        memLog.Lines.Add('Se NÃO existisse a Facade, o cliente precisaria fazer:');
        memLog.Lines.Add('');
        memLog.Lines.Add('  s3 := TSubsistemaTres.Create;');
        memLog.Lines.Add('  s3.MetodoTres;');
        memLog.Lines.Add('  s2 := TSubsistemaDois.Create;');
        memLog.Lines.Add('  s2.MetodoDois;');
        memLog.Lines.Add('  s1 := TSubsistemaUm.Create;');
        memLog.Lines.Add('  s1.MetodoUm;');
        memLog.Lines.Add('');
        memLog.Lines.Add('Com Facade, o cliente faz apenas:');
        memLog.Lines.Add('');
        memLog.Lines.Add('  facade.MetodoB;');
        memLog.Lines.Add('');
        memLog.Lines.Add('Saída gerada internamente pelos subsistemas:');
        memLog.Lines.Add('');

        FFacade.MetodoB(memLog.Lines);
      end;
  end;

  memLog.Lines.Add('');
  memLog.Lines.Add('Resumo do padrão Facade:');
  memLog.Lines.Add(' - TSubsistemaUm, TSubsistemaDois e TSubsistemaTres são detalhes internos.');
  memLog.Lines.Add(' - TFacade encapsula a orquestração desses subsistemas em operações simples.');
  memLog.Lines.Add(' - O cliente depende apenas de TFacade; se a regra mudar, só a fachada é afetada.');
end;

procedure TfrmFacade.FormCreate(Sender: TObject);
begin
  inherited;
  FFacade := TFacade.Create;
  memLog.Clear;
  memLog.ScrollBars := ssVertical;
end;

procedure TfrmFacade.FormDestroy(Sender: TObject);
begin
  FreeAndNil(FFacade);
  inherited;
end;

end.
